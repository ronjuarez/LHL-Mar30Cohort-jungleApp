<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
  </div>

  <% #Ordered items displayed to user %>
  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |      product|%>
        <%= render :partial => 'line_item', locals: {product: product, items: @items, order: @order}%>
      <% end %>
    </tbody>
  </table>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Total</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= humanized_money_with_symbol @order.total_cents / 100.0 %></td>
      <td><%= @order.email %></td>
    </tr>
  </tbody>
</table>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>