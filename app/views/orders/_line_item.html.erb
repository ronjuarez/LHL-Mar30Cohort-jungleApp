<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
  </td>
  <td>
    <%= product.description %>
    <%= items%>
    <%= order %>

  </td>
  <td>
    <% items.each do |item|%>
      <% if item.product_id == product.id %>
        <div style="text-align: center;"><%= item.quantity %></div>
      <% end %>
    <% end %>
  <td>
    <% items.each do |item|%>
      <% if item.product_id == product.id %>
        <div><%= humanized_money_with_symbol item.quantity * product.price %></div>
      <% end %>
    <% end %>
  </td>
</tr